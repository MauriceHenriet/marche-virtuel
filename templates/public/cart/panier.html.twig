{% extends "base.html.twig" %}

{% block title %}Le marché Virtuel Panier{% endblock %}

{% block body %}

<div class="container col-12">
    {% if panier | length > 0 %}
        <h1>Votre panier</h1>
        <div class="section-panier col-10">
            <table class="table table-hover">
                <thead>
                    <tr class="d-flex align-items-center justify-content-around">
                        <th class="col-1"></th>
                        <th class="col-2">Produit</th>
                        <th class="col-1">Prix</th>
                        <th class="col-2">Quantité</th>
                        <th class="col-2">sous-total</th>
                        <th class="col-1"></th>
                    </tr>
                </thead>

                <tbody>
                {% for item in panier %}
                    <tr class="d-flex align-items-center justify-content-around">
                        <td class="col-1">
                            {% if item.produit.imageUrl is same as null %}
                                <img class="image-panier" src="{{ asset('images/image_defaut.jpg')}}" alt="{{item.produit.slug}}">
                            {% else %}
                                <img class="image-panier" src="{{ asset(item.produit.imageUrl)}}" alt="{{item.produit.slug}}">                                
                            {% endif %}
                        </td>
                        <td class="col-2">
                            <p>{{item.produit.nom}}</p>
                        </td>
                        <td class="col-1">
                            {{ item.produit.prix | amount }}
                        </td>
                        <td class="col-2">
                            <div class="d-flex align-items justify-content-between">
                                <a class="btn btn-sm btn-primary" href="{{ path('cart_decrement', { 'id' : item.produit.id } ) }}"><i class="fas fa-minus"></i></a>
                                <button class="btn btn-secondary btn-sm">{{ item.qte }}</button>
                                <a class="btn btn-sm btn-primary" href="{{ path('cart_add', { 'id' : item.produit.id } ) }}"><i class="fas fa-plus"></i></a>
                            </div>
                        </td>
                        <td class="col-2">
                            {{ (item.produit.prix * item.qte) | amount }}
                        </td>
                        <td class="col-1">
                            <a href="{{ path('cart_remove', {'id' : item.produit.id } ) }}" class="btn btn-danger btn-sm">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                    
                    <tr class="d-flex align-items-center justify-content-around">
                        <td class="col-1"></td>
                        <td class="col-2"></td>
                        <td class="col-1"></td>
                        <td class="col-2"><p>sous-total : </p></td>
                        <td class="col-2"><p>{{ total | amount}}</p></td>
                        <td class="col-1"></td>
                    </tr>
                    <tr class="d-flex align-items-center justify-content-around">
                        <td class="col-1"></td>
                        <td class="col-2"></td>
                        <td class="col-1"></td>
                        <td class="col-2"><p>Frais de Livraison : </p></td>
                        <td class="col-2"><p> 10, 00 € </p></td>
                        <td class="col-1"></td>
                    </tr>
                    <tr class="d-flex align-items-center justify-content-around">
                        <td class="col-1"></td>
                        <td class="col-2">
                            <a href="{{ path('profile_commande') }}" class="btn btn-primary btn-lg"> Passer la Commander</a>
                        </td>
                        <td class="col-1"></td>
                        <td class="col-2"><p>TOTAL : </p></td>
                        <td class="col-2"><p>{{ total | shippingCost | amount }}</p></td>
                        <td class="col-1"></td>
                    </tr>
                </tbody>

            </table>
        </div>

    {% else %}
        <h2>Votre panier est vide</h2>
    {% endif %}
        <div class="section-sous-panier col-10">
             <a class="btn btn-warning" href="{{ path('public_home') }}">
                Continuer le shopping
            </a>
        </div>
</div>

{% endblock %}